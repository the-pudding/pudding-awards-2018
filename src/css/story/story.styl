/* CUSTOM STORY STYLE */
body
	padding 1rem
	background-color $off-white
ul
	list-style-type disc
	li
		margin-bottom 0.5rem

p.submit
	text-align center
	margin 3rem 0
	margin-bottom 6rem
	a
		padding 1rem
		set-type-size(large, false)
		line-height 1
		border none
		background $primary
		color $white
		font-weight 600
		border-radius 3px
